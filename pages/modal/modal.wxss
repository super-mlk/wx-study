/* 广告位 */
.advertisement {
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 200rpx;
  background-color: #fff;
  border-radius: 0 0 10rpx 10rpx;
  box-shadow: 0rpx -5rpx 20rpx rgba(0, 0, 0, 0.1);
}
.ad_left{
  box-sizing: border-box;
  width: 550rpx;
  height: 100%;
  padding: 0 24rpx;
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center; 
}
.ad_banner {
  position: absolute;
  width: 550rpx;
  height: 100%;
  top: 0;
  left: 0;
}

.ad_avatar {
  position: relative;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}

.ad_img {
  width: 100%;
  height: 100%;
}

.ad_info {
   position: relative;
  width: 380rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.ad_info_top {
  box-sizing: border-box;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-right: 10rpx;
  padding-bottom: 5rpx;
  color: #333;
}
.ad_name {
  font-size: 30rpx;
  font-weight: bold
}

.ad_local {
  font-size: 24rpx; 
}
.ad_tips {
  font-size: 26rpx; 
  white-space: nowrap
}
.iconfont_local:before {
  font-size: 24rpx; 
  content: "\e654";
  margin-right: 10rpx;
}
.ad_right{
  box-sizing: border-box;
  width: 200rpx;
  height: 100%;
  padding: 0 24rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center; 
  /* border-left: 1px solid #efefef */
}
.ad_btn {
   position: relative;
  padding: 15rpx 30rpx;
  font-size: 28rpx;
  color: #fff;
  border-radius: 8rpx;
  background-color: #000;
  box-shadow: 0 0 30rpx rgba(0, 0, 0, 0.2);
}

/*遮罩层*/

.mask_ad {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.mask_content {
  position: relative;
  width: 560rpx;
  background-color: #fff;
  border-radius: 10rpx;
  padding:30rpx;
}

.mask_title {
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  padding: 10rpx 2rpx 30rpx 2rpx;
}

.mask_close {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 30rpx;
  height: 30rpx;
}

.mask_close::before, .mask_close::after {
  position: absolute;
  content: '';
  display: block;
  width: 1px;
  height: 30rpx;
  left: 50%;
  top: 0;
  transform: rotate(45deg);
  background-color: #999;
}

.mask_close::after {
  transform: rotate(-45deg);
}

.mask_info {
  box-sizing: border-box;
  width: 100%;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 10px ;
}

.mask_avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
}

.mask_text {
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
}

.mask_wxname {
  font-size: 28rpx;
  color: #333;
  font-weight: bold
}

.mask_wxid {
  font-size: 24rpx;
  color: #777;
  padding-top: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  max-width: 340rpx;
  text-overflow: ellipsis;
}

.btn_copy {
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  width: 100%;
  background-color: #259ce0;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #fff;
  letter-spacing: 1px;
}

.ad_btn {
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.8);
  /* animation: slidup 3s ease infinite;    */
}

@keyframes slidup {
  0% {
    background-color: #333;
    color: #fff;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.8);
  }

  50% {
    background-color: #fff;
    color: #333;
  }

  100% {
    background-color: #333;
    color: #fff;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.8);
  }
}
